            <div type="edition" xml:space="preserve">
                <ab>
                    <lb n="1"/><persName ref="#roveos"><expan><abbr>Fl</abbr><ex>avius</ex></expan> Roveos</persName>, centenarius de <supplied reason="omitted">numero</supplied> equitum <choice><reg>comitum</reg><orig>comitis</orig></choice>
                    <lb n="2"/><expan><abbr>seni</abbr><ex>orum</ex></expan> <expan><abbr>sagit</abbr><ex>tariorum</ex></expan>, de <w xml:id="w1"><choice><reg>proprio</reg><orig>propio</orig></choice></w> suo <choice><corr>arcam</corr><orig>arca</orig></choice> sibi posuit.
                    <lb n="3"/>Si quis eam <w xml:id="w2">ap<choice><corr>e</corr><sic>i</sic></choice>rire</w> <w xml:id="w3"><expan><abbr>v<choice><corr>o</corr><sic>q</sic></choice>lu</abbr><ex>erit</ex></expan></w>, dabit <expan><abbr>fis</abbr><ex>ci</ex></expan> viribus
                    <lb n="4"/><measure type="fine" unit="roman_pound" commodity="silver" quantity="5">argenti pondo <choice><reg>quinque</reg><orig>cinque</orig></choice></measure>.
                </ab>
            </div>
