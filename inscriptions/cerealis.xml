                        <lem>
                            
                        </lem>
                        <rdg source="#bertolini1877 #edr097935">
                            <choice><abbr>D</abbr><expan>D<ex>is</ex></expan></choice> <choice><abbr>M</abbr><expan>M<ex>anibus</ex></expan></choice>
                        </rdg>
