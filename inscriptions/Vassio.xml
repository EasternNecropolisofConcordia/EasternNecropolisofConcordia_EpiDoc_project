                    <lb n="2"/>numeri <choice><reg>Batavorum</reg><orig><expan><abbr>Bataor</abbr><ex>um</ex></expan></orig></choice> <expan><abbr>sen</abbr><ex>iorum</ex></expan> quem sepe
                    <lb n="3" break="no"/>livit <w xml:id="w2">coniux</w> <persName ref="#suandacca"><w xml:id="w3">Suandacca</w></persName> <expan><abbr>q</abbr><ex>uae</ex></expan> vixit cum 
                    <lb n="4"/><supplied reason="omitted">e</supplied>o <expan><abbr>ann</abbr><ex>is</ex></expan> <num value="22">XXII</num> <expan><abbr>milit</abbr><ex>avit</ex></expan> <expan><abbr>ann</abbr><ex>is</ex></expan> <num value="35">XXXV</num> fer<surplus>e</surplus>t a
